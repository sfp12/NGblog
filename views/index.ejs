<% include header.ejs %>
<h1><%= title %></h1>
<p>Welcome to <%= title %></p>
<div class="article">
    <% posts.forEach(function(post, index) { %>
    <a href="/post/<%= post.ID %>" ><h2 class="title"><%= post.post_title %></h2></a>
    <p class="content"><%= post.post_content.replace(/<\/?[^>]*>|\n/g,'').substr(0,10) %>...</p>
    <span class="time"><%= post.post_date %></span>
    <% if (user) { %><a href="/post/edit/<%= post.ID %>">编辑</a><a href="/post/remove/<%= post.ID %>">删除</a><% } %>
    <% }) %>
</div>
<% include footer.ejs %>